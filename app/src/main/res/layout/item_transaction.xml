<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/light_green_card">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_transaction_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC Store"
                android:textColor="@color/dark_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 25, 2025 - 11:24 AM"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_transaction_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Purchased bulk supply of milk"
                android:textColor="@color/text_dark"
                android:textSize="16sp" />


        </LinearLayout>

        <!--<androidx.appcompat.widget.AppCompatButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_transaction_details"
            android:layout_gravity="center_vertical" />-->

    </LinearLayout>
</androidx.cardview.widget.CardView>
