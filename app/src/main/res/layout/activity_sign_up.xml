<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="@color/light_green_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp
"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_rounded_red">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_button"
                android:background="@color/emergency_red"
                app:tint="@color/off_white"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/off_white" />

        </LinearLayout>


        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Name:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />


        <!-- Name Fields -->
        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <EditText
            android:id="@+id/middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Middle Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <EditText
            android:id="@+id/suffix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Suffix (e.g., Jr., Sr., III)"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Contact:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Contact -->
        <EditText
            android:id="@+id/contactNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_telephone"
            android:paddingEnd="14dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <!-- Birthdate -->

        <TextView
            android:id="@+id/bday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Birth Date:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Birth Date"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:paddingEnd="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <!-- Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/dark_green"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/dark_green"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Sex:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Sex -->
        <Spinner
            android:id="@+id/sex_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/dark_green"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Address:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <EditText
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contact -->
        <TextView
            android:id="@+id/emergency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="For emergency :"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emergency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:drawableEnd="@drawable/ic_person_emergency"
            android:paddingEnd="14dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <EditText
            android:id="@+id/emergency_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Number"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:drawableEnd="@drawable/ic_telephone"
            android:paddingEnd="14dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_green"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Account credentials:"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/hint_green"
            android:background="@drawable/bg_rounded_white" />

        <!-- Password Field with Toggle -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/bg_rounded_white"
                android:paddingEnd="50dp"
                android:padding="12dp"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/hint_green" />

            <ImageView
                android:id="@+id/toggle_password_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_show_dark_green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>

        <!-- Confirm Password Field with Toggle -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@drawable/bg_rounded_white"
                android:paddingEnd="50dp"
                android:padding="12dp"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/hint_green" />

            <ImageView
                android:id="@+id/toggle_confirm_password_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_show_dark_green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>



        <!-- Sign Up Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_dark_green" />
    </LinearLayout>
</ScrollView>
